{
  "name": "responsiv-image-handler",
  "version": "1.0.0",
  "description": "Give it a image path and it returns responsive sizes, ratio, much like what is used in gatsby image component",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"index.js\" \"__tests__/**/*.js\"",
    "lint": "eslint index.js __tests__",
    "jest": "jest",
    "test": "npm run lint && npm run jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gerhardsletten/responsiv-image-handler.git"
  },
  "keywords": [
    "responsive",
    "srcset",
    "image",
    "sharp",
    "gatsby",
    "image"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gerhardsletten/responsiv-image-handler/issues"
  },
  "homepage": "https://github.com/gerhardsletten/responsiv-image-handler#readme",
  "dependencies": {
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "sharp": "^0.27.0",
    "svgo": "^1.3.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "prettier/prettier": "warn"
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    }
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "node",
    "verbose": true
  },
  "devDependencies": {
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  }
}
